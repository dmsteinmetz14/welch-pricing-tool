# Baserow configuration
BASEROW_API_URL=https://api.baserow.io
BASEROW_TOKEN=your-baserow-api-token
# Fill these with the numeric IDs for each table from your Baserow workspace
BASEROW_SUPPLIERS_TABLE_ID=000000
BASEROW_CHARGES_TABLE_ID=000000
BASEROW_FLOWERS_TABLE_ID=000000

BASEROW_FLOWER_TYPE_FIELD_ID=0000000
BASEROW_FLOWER_QUANTITY_FIELD_ID=0000000

# Firebase authentication (client-side keys from Firebase console)
NEXT_PUBLIC_FIREBASE_API_KEY=your-firebase-api-key
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your-project-id
NEXT_PUBLIC_FIREBASE_APP_ID=your-app-id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your-project.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=000000000000
NEXT_PUBLIC_FIREBASE_MEASUREMENT_ID=G-XXXXXXXXXX

# Optional: comma-separated list of Google emails that can access restricted pages
NEXT_PUBLIC_ALLOWED_GOOGLE_EMAILS=user1@example.com,user2@example.com
